  body.hold-transition.skin-blue.sidebar-mini
    .wrapper
      header.main-header
        a.logo(href='?tampil=beranda')
          span.logo-mini
            b SMS
          span.logo-lg
            i.fa.fa-send   
            | GO 
            b | SMS Gateway
        nav.navbar.navbar-static-top
          a.sidebar-toggle(href='#', data-toggle='push-menu', role='button')
            span.sr-only Toggle navigation
          .navbar-custom-menu
      aside.main-sidebar
        section.sidebar
          include ./sidebar.jade
      .content-wrapper
        section.content-header
            h1
                | Add New Phonebook
                small 
                    a(href='#')
                        | Phonebook
                    | / Add New Phonebook
            ol.breadcrumb
                li
                a(href='index.php')
                    i.fa.fa-dashboard
                    |  Home  
                li.active Dashboard
        section.content
          .row
            .col-xs-12
                .box
                    .box-header.with-border
                        .nav-tabs-custom
                            ul.nav.nav-tabs
                                li.active
                                    a(href='#tab_1', data-toggle='tab') Add New Phonebook
                                li
                                    a(href='#tab_2', data-toggle='tab') Upload Excel File to Phonebook
                            .tab-content
                                #tab_1.tab-pane.active
                                    form(role='form')
                                        .box-body
                                            .form-group
                                                label Name
                                                input.form-control(type='text', placeholder='Please Input Name ..')
                                            .form-group
                                                label Phone Number
                                                input.form-control(type='text', placeholder='Example : 085946350992 or 6285946350992')
                                            .form-group
                                                label(for='exampleInputEmail1') Email
                                                input#exampleInputEmail1.form-control(type='text', placeholder='Please Input Email ..')
                                            .form-group
                                                label Date Time Schedule SMS (Leave empty if not scheduled) 
                                                label Server time : 2018-03-02 08:33 GMT+7
                                                .input-group
                                                    .input-group-addon
                                                        i.fa.fa-calendar
                                                    input#datepicker.form-control.pull-right(type='text')
                                            .form-group
                                                label Address
                                                textarea.form-control(rows='3', placeholder='Enter ...')
                                        .box-footer
                                            button.btn.btn-primary(type='submit') SEND
                                #tab_2.tab-pane
                                    .box-body
                                        .form-group
                                            label(for='exampleInputFile') File Excel
                                            input#exampleInputFile.form-control(type='file')
                                            p.help-block 
                                                b Note : Please download this 
                                                    a(href="#") Excell Phonebook Template 
                                                    | to upload your contact number
                                    .box-footer
                                            button.btn.btn-primary(type='submit') UPLOAD

