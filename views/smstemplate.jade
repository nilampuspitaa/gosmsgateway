      aside.main-sidebar
        section.sidebar
          include ./sidebar.jade
      .content-wrapper
        section.content-header
            h1
                | SMS Templates
                small 
                    a(href='#')
                        | Send Message
                    | / SMS Template
            ol.breadcrumb
                li
                a(href='index.php')
                    i.fa.fa-dashboard
                    |  Home  
                li.active Dashboard
        section.content
          .row
            .col-xs-12
                .box.box-solid
                  
                  .box-body
                    #accordion.box-group
                      // we are adding the .panel class so bootstrap.js collapse plugin detects it
                      .panel.box.box-primary
                        .box-header.with-border
                          h4.box-title
                            a(data-toggle='collapse', data-parent='#accordion', href='#collapseOne', aria-expanded='true')
                              | Send SMS Templates to New Phone Number
                        #collapseOne.panel-collapse.collapse.in(aria-expanded='true', style='')
                          .box-body
                            form(role='form')
                              .box-body
                                .form-group
                                  label(for='exampleInputEmail1') Phone Number
                                  input#exampleInputEmail1.form-control(type='email', placeholder='Example : 085946350992 or 6285946350992')
                                .form-group
                                  label Template Message
                                  select.form-control
                                    option option 1
                                    option RANDOM
                                .form-group
                                  label From Modem
                                  select.form-control
                                    option option 1
                                    option RANDOM
                                .form-group
                                  label Date Time Schedule SMS (Leave empty if not scheduled) 
                                  label Server time : 2018-03-02 08:33 GMT+7
                                  .input-group
                                    .input-group-addon
                                      i.fa.fa-calendar
                                    input#datepicker.form-control.pull-right(type='text')
                            .box-footer
                              button.btn.btn-primary(type='submit') SEND

                      .panel.box.box-danger
                        .box-header.with-border
                          h4.box-title
                            a(data-toggle='collapse', data-parent='#accordion', href='#collapseTwo')
                              | Send SMS Template from Phonebook
                        #collapseTwo.panel-collapse.collapse
                          .box-body
                            form(role='form')
                              .box-body
                                .form-group
                                  label Group
                                  select.form-control
                                    option --
                                    option Group 1  
                                    option Group 2
                                .form-group
                                  label Message
                                  textarea.form-control(rows='3', placeholder='Enter ...')
                                .form-group
                                  label From Modem
                                  select.form-control
                                    option option 1
                                    option RANDOM
                                .form-group
                                  label Date Time Schedule SMS (Leave empty if not scheduled) 
                                  label Server time : 2018-03-02 08:33 GMT+7
                                  .input-group
                                    .input-group-addon
                                      i.fa.fa-calendar
                                    input#datepicker1.form-control.pull-right(type='text')
                              .box-footer
                                button.btn.btn-primary(type='submit') SEND

                      .panel.box.box-success
                        .box-header.with-border
                          h4.box-title
                            a(data-toggle='collapse', data-parent='#accordion', href='#collapseThree')
                              | Send SMS Template to Group
                        #collapseThree.panel-collapse.collapse
                          .box-body
                            form(role='form')
                              .box-body
                                .form-group
                                  label Group
                                  select.form-control
                                    option --
                                    option Group 1  
                                    option Group 2
                                .form-group
                                  label Message
                                  textarea.form-control(rows='3', placeholder='Enter ...')
                                .form-group
                                  label From Modem
                                  select.form-control
                                    option option 1
                                    option RANDOM
                                .form-group
                                  label Date Time Schedule SMS (Leave empty if not scheduled) 
                                  label Server time : 2018-03-02 08:33 GMT+7
                                  .input-group
                                    .input-group-addon
                                      i.fa.fa-calendar
                                    input#datepicker2.form-control.pull-right(type='text')
                                .form-group
                                  label Time picker:
                                  .input-group
                                    input.form-control.timepicker(type='text')
                                    .input-group-addon
                                      i.fa.fa-clock-o
                              .box-footer
                                button.btn.btn-primary(type='submit') SEND
                            
